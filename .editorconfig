# editorconfig
[*]
indent_style = tab  # 缩进风格
tab_width = 2       # tab宽度
indent_size = 2     # 缩进宽度
end_of_line = lf    # 结尾符 MacOS：lf（\n） Windows:Crlf(\r\n)
charset = utf-8     # 编码
trim_trailing_whitespace = true # 行尾是否删除空格
insert_final_newline = true     # 是否以换行符结尾

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
